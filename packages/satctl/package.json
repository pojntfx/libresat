{
  "name": "@libresat/satctl",
  "version": "0.0.1-26",
  "description": "`kubectl`-like CLI to develop or/and control satellites",
  "author": "Felix Pojtinger <felix@pojtinger.com>",
  "license": "AGPL-3.0",
  "homepage": "https://gitlab.com/libresat/libresat/tree/master/packages/satctl#README",
  "scripts": {
    "dev": "run-p dev:watch",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/start.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:watch": "nodemon -x 'run-p dev:build dev:start'",
    "dev:build": "ts-node -P tsconfig.json src/index.ts",
    "dev:build:watch": "nodemon -x 'run-p dev:build'",
    "dev:start": "ts-node -P tsconfig.json src/start.ts",
    "dev:start:watch": "nodemon -x 'run-p dev:start",
    "dev:start:debug": "node --inspect-brk=5858 ../../node_modules/.bin/ts-node --ignore false -P tsconfig.json src/start.ts",
    "dev:debug": "run-p dev:debug:watch",
    "dev:debug:watch": "nodemon -x 'run-p dev:build dev:start:debug'",
    "prod:watch": "nodemon -x 'run-s build start'",
    "prod:build:watch": "nodemon -x 'run-p build'",
    "prod:start:watch": "nodemon -x 'run-p start'",
    "binary:build": "pkg package.json -t node10-linux-x64 -o dist/libresat-satctl",
    "binary:start": "run-s binary:prepare binary:execute",
    "binary:install": "sudo install dist/libresat-satctl /usr/bin",
    "binary:prepare": "chmod +x dist/libresat-satctl",
    "binary:execute": "dist/libresat-satctl",
    "prepare": "run-p build"
  },
  "dependencies": {
    "@libresat/host-agent-core": "^0.0.1-26",
    "@oclif/command": "^1.5.4",
    "@oclif/config": "^1.8.8",
    "@oclif/plugin-help": "^2.1.3",
    "@types/js-yaml": "^3.11.2",
    "ajv": "^6.5.4",
    "js-yaml": "^3.12.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "pkg": "^4.3.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "main": "dist/index.js",
  "source": "src/index.ts",
  "bin": "dist/start.js",
  "pkg": {
    "scripts": "dist/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/libresat/libresat.git"
  },
  "oclif": {
    "bin": "libresat-satctl"
  },
  "publishConfig": {
    "access": "public"
  }
}
