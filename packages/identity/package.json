{
  "name": "@libresat/identity",
  "version": "0.0.1-9",
  "description": "Identity provider for [LibreSat](https://libresat.space/)",
  "main": "dist/index.ts",
  "bin": "dist/tasks/start.js",
  "scripts": {
    "dev": "nodemon --ext json,ts,graphql --exec ts-node --project ./tsconfig.json --files src/tasks/start.ts -- --port 3000 --db-url mongodb://localhost:27017",
    "build": "tsc -p tsconfig.json && cp -r src/typeDefs dist/",
    "build:binary": "pkg package.json --targets node10-linux-x64 --out-path dist/",
    "start": "node dist/tasks/start.js -- --port 3000 --db-url mongodb://localhost:27017",
    "start:binary": "chmod +x dist/identity && dist/identity --port 3000 --db-url mongodb://localhost:27017",
    "install:binary": "sudo install dist/identity /usr/bin",
    "prepublish": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/libresat/libresat/tree/master/packages/identity"
  },
  "keywords": [
    "identity",
    "authentication",
    "authorization",
    "roles",
    "users"
  ],
  "author": "Felix Pojtinger <felix@pojtinger.com>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@libresat/service": "^0.0.1-9"
  },
  "devDependencies": {
    "typescript": "^3.0.3",
    "nodemon": "^1.18.4",
    "pkg": "^4.3.4",
    "ts-node": "^7.0.1"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "dist/**/*.graphql"
  },
  "publishConfig": {
    "access": "public"
  }
}
