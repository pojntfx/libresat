{
  "name": "@libresat/identity",
  "description": "Identity provider for [LibreSat](https://libresat.space/)",
  "version": "0.0.1-11",
  "main": "dist/index.js",
  "bin": "dist/start.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "dist/**/*.graphql"
  },
  "scripts": {
    "dev": "npm run watch:dev",
    "build": "tsc -p tsconfig.json && cp -r src/typeDefs dist/",
    "build:dev": "ts-node -P tsconfig.json src/index.ts",
    "build:binary": "pkg package.json -t node10-linux-x64 -o dist/libresat-identity",
    "start": "node dist/start.js",
    "start:dev": "ts-node -P tsconfig.json src/start.ts",
    "start:binary": "chmod +x dist/libresat-identity && dist/libresat-identity",
    "install:binary": "sudo install dist/libresat-identity /usr/bin",
    "watch": "nodemon -e ts,js,graphql -x \"npm run build && npm run start\" -w src/",
    "watch:dev": "nodemon -e ts,js,graphql -x \"npm run build:dev && npm run start:dev\" -w src/",
    "watch:build": "nodemon -e ts,js,graphql -x npm run build -w src/",
    "watch:build:dev": "nodemon -e ts,js,graphql -x npm run build:dev -w src/",
    "watch:start": "nodemon -e ts,js,graphql -x npm run start -w src/",
    "watch:start:dev": "nodemon -e ts,js,graphql -x npm run start:dev -w src/",
    "prepare": "npm run build",
    "test": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/libresat/libresat/tree/master/packages/identity"
  },
  "keywords": [
    "identity",
    "authentication",
    "authorization",
    "organizations",
    "roles",
    "users"
  ],
  "author": "Felicitas Pojtinger <felicitas@pojtinger.com>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@libresat/service": "^0.0.1-11"
  },
  "bugs": {
    "url": "https://gitlab.com/libresat/libresat/issues"
  },
  "homepage": "https://gitlab.com/libresat/libresat/tree/master/packages/identity#README",
  "publishConfig": {
    "access": "public"
  }
}
