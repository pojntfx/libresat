    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "main": "dist/index.js",
  "source": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/libresat/libresat.git"
