{
  "name": "@libresat/service",
  "version": "0.0.1-3",
  "description": "Opinionated utility for creating GraphQL microservices with a database",
  "main": "dist/index.js",
  "bin": "dist/example/src/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node example/src/index.ts",
    "build": "tsc -p tsconfig.json && cp -r example/src/typeDefs dist/example/src/",
    "build:docs": "typedoc --out docs-dist/",
    "build:binary": "pkg package.json --out-path dist/",
    "start": "node dist/index.js",
    "start:docs": "serve docs-dist/",
    "prepublish": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/libresat/libresat/tree/master/packages/service"
  },
  "keywords": [
    "microservice"
  ],
  "author": "Felicitas Pojtinger <felicitas@pojtinger.com>",
  "license": "AGPL-3.0",
  "dependencies": {
    "graphql-yoga": "^1.16.2",
    "merge-graphql-schemas": "^1.5.3",
    "mongoose": "^5.2.13",
    "typescript": "^3.0.3"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "dist/**/*.graphql"
  },
  "devDependencies": {
    "nodemon": "^1.18.4",
    "pkg": "^4.3.4",
    "serve": "^10.0.0",
    "ts-node": "^7.0.1",
    "typedoc": "^0.12.0"
  }
}
