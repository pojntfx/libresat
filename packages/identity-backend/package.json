{
  "name": "@libresat/identity-backend",
  "version": "0.0.1-25",
  "description": "A simple authorization microservice",
  "author": "Felicitas Pojtinger <felicitas@pojtinger.com>",
  "license": "AGPL-3.0",
  "homepage": "https://gitlab.com/libresat/libresat/tree/master/packages/identity-backend#README",
  "scripts": {
    "dev": "run-p dev:watch",
    "build": "tsc -p tsconfig.json && cp -r src/typeDefs dist/",
    "start": "node dist/start.js -p 3000 -db mongodb://localhost:27017 -hds true",
    "test": "jest",
    "dev:watch": "nodemon -x 'run-p dev:build test dev:start'",
    "dev:build": "ts-node -P tsconfig.json src/index.ts",
    "dev:build:watch": "nodemon -x 'run-p dev:build'",
    "dev:start": "ts-node -P tsconfig.json src/start.ts -p 3000 -db mongodb://localhost:27017 -hds true",
    "dev:start:watch": "nodemon -x 'run-p dev:start",
    "dev:start:debug": "node --inspect-brk=5858 ../../node_modules/.bin/ts-node --ignore false -P tsconfig.json src/start.ts -p 3000 -db mongodb://localhost:27017 -hds true",
    "dev:debug": "run-p dev:debug:watch",
    "dev:debug:watch": "nodemon -x 'run-p dev:build test dev:start:debug'",
    "prod:watch": "nodemon -x 'run-s build start'",
    "prod:build:watch": "nodemon -x 'run-p build'",
    "prod:start:watch": "nodemon -x 'run-p start'",
    "binary:build": "pkg package.json -t node10-linux-x64 -o bin/libresat-identity-backend",
    "binary:start": "run-s binary:prepare binary:execute",
    "binary:install": "sudo install bin/libresat-identity-backend /usr/bin",
    "binary:prepare": "chmod +x bin/libresat-identity-backend",
    "binary:execute": "bin/libresat-identity-backend -p 3000 -db mongodb://localhost:27017 -hds true",
    "prepare": "run-p build"
  },
  "dependencies": {
    "@libresat/service": "0.0.1-25",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "pkg": "^4.3.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "main": "dist/index.js",
  "source": "src/index.ts",
  "bin": "dist/start.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "dist/**/*.graphql"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/libresat/libresat.git"
  },
  "bugs": {
    "url": "https://gitlab.com/libresat/libresat/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
